<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fcfcfc">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:id="@+id/city_activity_place_list_layout_lanetTextView"/>

    <ImageView
        android:id="@+id/city_activity_city_list_layout_imageView"
        android:layout_width="250dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/default_place" />



    <TextView
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/city_activity_city_list_layout_txtCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Central Park"
        android:textSize="28sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/city_activity_city_list_layout_txtCityDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Central Park is one of the amazing place in New York. There is already 3000 hundred ..."
        android:textSize="20sp" />


</LinearLayout>
